<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="habit"
            type="com.example.habitstacks.model.Habit" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/habit_overview_cardview"
        style="@style/CardViewStyle">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/icon_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="80dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toTopOf="@id/goal_button"
                app:layout_constraintTop_toBottomOf="@id/habit_description">

                <ImageView
                    android:id="@+id/icon_priority_low"
                    style="@style/IconStyle"
                    app:lowPriority="@{habit}"
                    tools:srcCompat="@drawable/ic_baseline_priority"/>

                <ImageView
                    android:id="@+id/icon_priority_med"
                    style="@style/IconStyle"
                    app:medPriority="@{habit}"
                    tools:srcCompat="@drawable/ic_baseline_priority"/>

                <ImageView
                    android:id="@+id/icon_priority_high"
                    style="@style/IconStyle"
                    app:highPriority="@{habit}"
                    tools:srcCompat="@drawable/ic_baseline_priority"/>

                <ImageView
                    android:id="@+id/icon_rating"
                    style="@style/IconStyle"
                    android:layout_marginStart="70dp"
                    app:habitRatingIcon="@{habit}"
                    tools:srcCompat="@drawable/ic_baseline_thumb_up" />

            </LinearLayout>

            <TextView
                android:id="@+id/habit_description"
                style="@style/TextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="40sp"
                app:habitDescriptionText="@{habit}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="My Habit" />


            <Button
                android:id="@+id/goal_button"
                style="@style/ButtonStyle"
                android:layout_marginBottom="128dp"
                android:text="@string/goal_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/track_button"
                style="@style/ButtonStyle"
                android:layout_marginBottom="40dp"
                android:text="@string/track_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>